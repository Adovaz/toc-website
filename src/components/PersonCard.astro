---
interface Props {
	title: string;
    subtitle: string;
	image: string;
    style: string;
    target: string;
}

const { title, subtitle, image, style, target } = Astro.props;
---
<a class=`linkCardOuter ${style}` target={target}>
        <div class="top">
            <div class="image">
                <img src={image} alt="image" />
            </div>
           
        </div>
        <!-- 
        <div class="bottom">
             <img src="/icons/arrowPurpBig.png" alt="arrow" class="arrow" /> 
        </div> 
        -->
        <div class="bottom">
            <div class="content">
                <div class="title">{title}</div>
                <div class="subtitle">{subtitle}</div>
            </div>
        </div>
</a>

<style>
    .greyBg {
        background: #f9f7ff;
    }
    .bottom {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        align-items: center;
    }
    .arrow {
        width: 3rem;
    }
    .linkCardOuter {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        height: 100%;
        position: relative;
        text-align: left;
        background:white;
        border-radius: 2%;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        
        height: 25rem;
        overflow: hidden;
        flex-shrink: 0;
        text-decoration: none;
        transition: all 0.3s ease-in-out;
    }
    .image {
        height: 12.81rem;
    }
    .image img {
        width: 100%;
    }
    .content {
        padding: 1.5rem;
        flex: 1;
    }
    .title {
        font-size: 2rem;
        font-weight: 700;
        font-family: "Metropolis", "Inter", system-ui, sans-serif;
        margin: 0;
        margin-bottom: 1rem;
        color: #0b0025;
        line-height: 1.1;
        /* max at 2 lines then ... */
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
    .subtitle {
        font-size: 1rem;
        font-weight: 400;
        font-family: "Metropolis", "Inter", system-ui, sans-serif;
        margin: 0;
        color: #0b0025;
        display: -webkit-box;
        -webkit-line-clamp: 5;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }


</style>