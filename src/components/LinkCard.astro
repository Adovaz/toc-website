---
interface Props {
	title: string;
    subtitle: string;
	image: string;
	href: string;
    style: string;
}

const { href, title, subtitle, image, style } = Astro.props;
import { Image } from 'astro:assets';
---
<li class=`link-card ${style}`>
	<a href={href} target="_blank" rel="noopener noreferrer">
        <img src={image} alt={title} class="thumbnailImage"/>
		<div class="titles">
            <div class="title">
                {title}
            </div>
            <div class="subtitle">
                {subtitle}
            </div>
        </div>
	</a>
</li>
<style>
    .mini {
        width: 30%!important;
    }
    .attention {
        /* background:red!important; */
        box-shadow: 0 0 30px 2px rgba(255, 233, 186, 0.459)!important;
    }
    .title {
        /* horizontally center */
        font-size: 1.1rem;
        font-weight: 600;
        transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    }
    .subtitle {
        opacity: 0.7;
        transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
        font-style: italic;
        font-size: 0.85rem;
    }
    .titles {
        flex: 1;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
    }
    .thumbnailImage {
        /* height: 100%; */
        object-fit: cover;
        border-radius: 180px;
    }
	.link-card {
		list-style: none;
		display: flex;
		/* padding: 1px; */
		/* background-color: #fff; */
		background-image: none;
		background-size: 400%;
        /* width: 80%; */
		border-radius: 30px;
        height: 57px;
		transition: all 0.2s cubic-bezier(0.22, 1, 0.36, 1);
        box-shadow: 0 0 10px 2px rgba(0, 0, 0, 0.062);
	}
	.link-card > a {
		width: 100%;
		text-decoration: none;
        padding: 4px;
		border-radius: 31px;
		color: #000000;
		background-color: #fff;
		opacity: 0.9;
        display: flex;
        flex-direction: row;
	}

    .link-card:is(:hover, :focus-within) {
		transform: scale(1.013);
	}
	.link-card:is(:hover, :focus-within) h2 {
		color: rgb(var(--accent-light));
	}

	h2 {
		margin: 0;
		1size: 1.25rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
	}
</style>
